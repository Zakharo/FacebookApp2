<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vladzakharo.facebookapp.PublishActivity">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:id="@+id/tvMessage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/tvName"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/tvMessage"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caption"
        android:id="@+id/tvCaption"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/tvName"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/tvDescription"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/tvCaption"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picture"
        android:id="@+id/tvPicture"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/tvDescription"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Link"
        android:id="@+id/tvLink"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/tvPicture"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etMessage"
        android:layout_alignBottom="@+id/tvMessage"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvDescription" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:layout_alignBottom="@+id/tvName"
        android:layout_alignStart="@+id/etMessage"
        android:layout_alignEnd="@+id/etMessage" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etCaption"
        android:layout_alignBottom="@+id/tvCaption"
        android:layout_alignStart="@+id/etName"
        android:layout_alignEnd="@+id/etName" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etDescription"
        android:layout_above="@+id/tvPicture"
        android:layout_alignStart="@+id/etCaption"
        android:layout_alignEnd="@+id/etCaption" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPicture"
        android:layout_above="@+id/tvLink"
        android:layout_alignStart="@+id/etDescription"
        android:layout_alignEnd="@+id/etDescription" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etLink"
        android:layout_alignBottom="@+id/tvLink"
        android:layout_alignStart="@+id/etPicture"
        android:layout_alignEnd="@+id/etPicture" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSubmit"
        android:layout_below="@+id/tvPlace"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place"
        android:id="@+id/tvPlace"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/tvLink"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPlace"
        android:layout_alignBottom="@+id/tvPlace"
        android:layout_alignStart="@+id/etLink"
        android:layout_alignEnd="@+id/etLink" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get place"
        android:id="@+id/btnPlace"
        android:layout_alignTop="@+id/btnSubmit"
        android:layout_toStartOf="@+id/btnSubmit" />

</RelativeLayout>
